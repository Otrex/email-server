{
  "name": "@dumo/email-server",
  "version": "0.0.1",
  "description": "Email Server",
  "main": "build/src/index.ts",
  "license": "MIT",
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "nodemon src/index.ts",
    "dev:test": "node --nolazy -r ts-node/register test/mocks/server.ts",
    "build": "rimraf ./build && tsc",
    "prettier": "prettier --write .",
    "lint": "eslint . --ext .ts --fix",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "generate:migration": "yarn typeorm migration:generate -n",
    "migrate": "yarn typeorm migration:run",
    "test": "APP_ENV=test jest --runInBand --forceExit",
    "test:module": "APP_ENV=test jest ./test/e2e/module/* --runInBand --forceExit",
    "prepare": "husky install && yarn build"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.37",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": ">=6",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "sync-dotenv": "^2.6.2",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://git.chigisoft.dev/packages/email-server.git"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.4.4",
    "bullmq": "^1.36.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "fastest-validator": "^1.10.1",
    "handlebars": "^4.7.7",
    "mysql2": "^2.2.5",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.32",
    "winston": "^3.3.3",
    "winston-console-format": "^1.0.8"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": "prettier --write",
    "*.{js,ts}": "eslint --cache --fix"
  }
}
